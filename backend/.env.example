# Database Configuration (Supabase PostgreSQL)
# CRITICAL: Never commit actual values - Railway environment variables only!
DATABASE_URL=postgresql://user:password@host:port/database
DATABASE_POOL_SIZE=10

# Secret Keys (Generate with: mix phx.gen.secret)
SECRET_KEY_BASE=generate_with_mix_phx_gen_secret_64_bytes_minimum
GUARDIAN_SECRET_KEY=generate_with_mix_phx_gen_secret_32_bytes_minimum

# Encryption Keys (Generate with: :crypto.strong_rand_bytes(32) |> Base.encode64())
CLOAK_KEY=generate_secure_base64_encoded_32_bytes

# Session Configuration
SESSION_SIGNING_SALT=generate_random_salt_16_bytes
SESSION_ENCRYPTION_SALT=generate_random_salt_16_bytes

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com

# OpenAI API (for Nesti AI)
OPENAI_API_KEY=sk-your-openai-api-key

# Application Configuration
PHX_HOST=api.nesti.fr
PORT=4000
NODE_ENV=production

# Railway Specific
RAILWAY_ENVIRONMENT=production
RAILWAY_REGION=eu-west

# Rate Limiting Redis (if using Redis backend for Hammer)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=info

# RGPD Compliance
DATA_RETENTION_DAYS=365
MINOR_AGE_THRESHOLD=16
